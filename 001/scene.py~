class Irlanda(Scene):
    def construct(self):
        text = Tex("Oye...")
        text2 = Tex("Te invito a tomar tÃ©")
        text3 = Tex("Y a comer galletas")

        self.play(Write(text,run_time=1))
        self.wait(2)
        self.clear()
        self.play(Write(text2,run_time=3))
        self.wait(1)
        self.clear()
        self.play(Write(text3,run_time=3))
        self.wait(2)
